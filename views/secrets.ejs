<%- include('partials/header') %>

<div class="container">
  <div class="card">
    <h2>Welcome, <%= user.name %>!</h2>
    <p>Email: <%= user.email %></p>
    <p>This is your protected secrets page. Only authenticated users can see this content.</p>
    
    <div class="secret-section">
      <h3>Share a Secret</h3>
      <form id="secretForm">
        <textarea id="secretContent" placeholder="What's your secret?" required></textarea>
        <button type="submit" class="btn">Share Secret</button>
      </form>
    </div>
    
    <div class="secrets-list">
      <h3>Shared Secrets</h3>
      <div id="secretsContainer">
        <!-- Secrets will be loaded here -->
      </div>
    </div>
    
    <a href="/logout" class="btn logout-btn">Logout</a>
  </div>
</div>

<%- include('partials/footer') %>
